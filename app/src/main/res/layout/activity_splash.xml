<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical">



    <LinearLayout
        android:id="@+id/layout_image_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="120dp">


        <ImageView

            android:id="@+id/image_logo"
            android:layout_width="186dp"
            android:layout_height="159dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/ic_launcher_foreground"/>


    </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/layout_image_content">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crypto Mania"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/baloo_medium"
                android:textColor="@color/white"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/text_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="30dp"
                android:layout_gravity="center"
                android:text="The worldâ€™s leading independent cryptocurrency data aggregator."
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="16sp"/>

        </LinearLayout>




</RelativeLayout>